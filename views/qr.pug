html
  head
    script(src='https://unpkg.com/qr-code-styling/lib/qr-code-styling.js')
    title= title
  body
    div(id="container")
      h1(id="url")= link
      br
      div(id="qr2")
      br
      div(id="qr")
    p(id="id_color")= color 
    p(id="id_backgroundColor")= backgroundColor 

script.
  let url = document.getElementById("url").innerHTML
  const qrCode = new QRCodeStyling({
    width: 1280,
    height: 1280,
    data: url
  });
  qrCode.append(document.getElementById("qr"));
  const qrCode2 = new QRCodeStyling({
    width: 400,
    height: 400,
    data: url
  });
  qrCode2.append(document.getElementById("qr2"));
style.
  #container{
    font-family: "Century Gothic W01",Arial;
    text-align: center;
  }
  p {
    display: none;
  }
